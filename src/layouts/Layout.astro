---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='fr'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='BARBARES - Restaurant & Bar à Vin - Punk / Brutalist / Underground'
		/>
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/png' href='/favicon.png' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			rel='preload'
			href='/fonts/Altero-Regular.otf'
			as='font'
			type='font/otf'
			crossorigin
		/>
		<link
			href='https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=DM+Sans:wght@400;700&family=Reenie+Beanie&family=Gloria+Hallelujah&family=Anton&display=swap'
			rel='stylesheet'
		/>
		<style is:global>
			.noise-overlay {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				pointer-events: none;
				z-index: 9999;
				opacity: 0.05;
				background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
			}
		</style>
	</head>
	<body class='bg-wood text-paper font-inter relative'>
		<div class='noise-overlay'></div>

		<nav
			class='fixed top-0 left-0 w-full z-50 border-b-4 border-deep-black bg-blood-red/90 backdrop-blur-sm'>
			<div class='flex justify-between items-center p-4'>
				<a
					href='/'
					class='text-4xl font-altero text-neon-red hover:text-paper transition-colors leading-none pt-2'
					>BARBARES</a
				>
				<div class='hidden md:flex gap-8'>
					<a
						href='#menu'
						class='font-anton text-xl uppercase hover:text-neon-red transition-colors'
						>Manger</a
					>
					<a
						href='#vins'
						class='font-anton text-xl uppercase hover:text-neon-red transition-colors'
						>Boire</a
					>
					<a
						href='#infos'
						class='font-anton text-xl uppercase hover:text-neon-red transition-colors'
						>Infos</a
					>
				</div>
				<a
					href='https://www.instagram.com/barbaresfigeac'
					target='_blank'
					class='btn-punk text-sm px-4 py-2 !border-2'>
					Reserver
				</a>
			</div>
		</nav>

		<main class='relative z-10 pt-24'>
			<slot />
		</main>

		<footer
			class='relative z-10 border-t-4 border-deep-black bg-deep-black text-paper py-12 mt-24'>
			<div class='container mx-auto px-4'>
				<div class='grid grid-cols-1 md:grid-cols-3 gap-12'>
					<div>
						<h3 class='text-4xl text-neon-red mb-4'>Barbares</h3>
						<p class='font-courier text-lg font-bold'>
							BAR À VIN · COMPTOIR GOURMAND · CAVISTE
						</p>
					</div>
					<div>
						<h3 class='text-2xl text-neon-red mb-4'>Horaires</h3>
						<p class='font-courier'>
							Du Mardi au Vendredi dès 17h<br />
							Le Samedi dès 11h<br />
							Cuisine ouverte jusqu'à 22h
						</p>
					</div>
					<div>
						<h3 class='text-2xl text-neon-red mb-4'>Contact</h3>
						<p class='font-courier'>
							12 rue Séguier<br />
							46100 Figeac<br />
							<a href='tel:+33983239346' class='hover:text-neon-red'
								>09 83 23 93 46</a
							>
						</p>
					</div>
				</div>
				<div
					class='mt-12 pt-8 border-t-2 border-neon-red/30 text-center font-courier text-sm opacity-50'>
					&copy; {new Date().getFullYear()} BARBARES
				</div>
			</div>
		</footer>
	</body>
</html>
